                <i class="user icon"></i>

            </div>

            <br>

            <div class="form-group ui fluid left icon input">
                <label for="email"> </label>
                <input class="form-control" type="password" name="password" id="password" placeholder="Password">  <!--HIDES THE PASSWORD-->
